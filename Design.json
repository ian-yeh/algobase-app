{
  "designSystem": {
    "name": "Algobase Design System",
    "version": "1.0.0",
    "description": "A modern, clean design system built with Next.js, Tailwind CSS, and shadcn/ui components",
    
    "foundation": {
      "theming": {
        "system": "next-themes with shadcn/ui CSS variables",
        "modes": ["light", "dark", "system"],
        "implementation": "CSS variables that automatically adapt based on theme"
      },
      
      "typography": {
        "fontFamily": "font-sans (system font stack)",
        "headings": {
          "h1": "text-3xl font-bold",
          "h2": "text-2xl font-bold", 
          "h3": "text-lg font-medium"
        },
        "body": {
          "default": "text-sm",
          "large": "text-base",
          "small": "text-xs"
        },
        "weights": {
          "medium": "font-medium",
          "semibold": "font-semibold", 
          "bold": "font-bold"
        }
      },
      
      "spacing": {
        "containerPadding": "p-4, p-6, p-8",
        "componentGaps": "gap-2, gap-3, gap-4, gap-6",
        "verticalSpacing": "space-y-1, space-y-4, space-y-6"
      },
      
      "borderRadius": {
        "small": "rounded-md",
        "medium": "rounded-lg",
        "full": "rounded-full"
      }
    },

    "colorSystem": {
      "semanticTokens": {
        "background": "Main page background",
        "foreground": "Primary text color",
        "card": "Card/container backgrounds",
        "card-foreground": "Text on card backgrounds",
        "primary": "Brand color for CTAs and active states",
        "primary-foreground": "Text on primary backgrounds",
        "muted": "Subtle background for hover states",
        "muted-foreground": "Secondary text color",
        "border": "Border colors for dividers and containers",
        "input": "Input field border colors",
        "ring": "Focus ring colors"
      },
      
      "usage": {
        "backgrounds": {
          "page": "bg-background",
          "cards": "bg-card",
          "sidebar": "bg-background",
          "header": "bg-background"
        },
        "text": {
          "primary": "text-foreground",
          "secondary": "text-muted-foreground",
          "onCards": "text-card-foreground"
        },
        "interactive": {
          "active": "bg-primary text-primary-foreground",
          "hover": "hover:bg-muted",
          "borders": "border-border"
        }
      }
    },

    "layout": {
      "structure": {
        "type": "Fixed sidebar layout",
        "sidebarWidth": "250px",
        "headerHeight": "Auto",
        "contentArea": "flex-1"
      },
      
      "responsive": {
        "breakpoints": {
          "sm": "640px",
          "md": "768px", 
          "lg": "1024px",
          "xl": "1280px",
          "2xl": "1536px"
        },
        "gridSystem": {
          "mobile": "grid-cols-1",
          "tablet": "md:grid-cols-2",
          "desktop": "lg:grid-cols-3, xl:grid-cols-4"
        }
      }
    },

    "components": {
      "navigation": {
        "sidebar": {
          "component": "Sidebar",
          "features": ["Active state detection", "Dynamic routing", "Icon + text labels"],
          "styling": {
            "container": "bg-background border-r border-border",
            "activeItem": "bg-primary text-primary-foreground",
            "inactiveItem": "text-foreground hover:bg-muted",
            "sectionHeader": "text-muted-foreground uppercase text-xs"
          }
        },
        
        "header": {
          "component": "Header",
          "features": ["Logo", "Search bar", "Theme toggle", "User menu", "Notifications"],
          "styling": {
            "container": "bg-background border-b border-border",
            "search": "bg-muted/50 focus:ring-ring",
            "buttons": "Button variant='ghost'"
          }
        }
      },

      "forms": {
        "inputs": {
          "component": "Input (shadcn)",
          "styling": "border-input bg-background text-foreground",
          "focus": "focus:ring-2 focus:ring-ring"
        },
        
        "labels": {
          "component": "Label (shadcn)",
          "styling": "font-medium text-foreground"
        },
        
        "buttons": {
          "primary": "Button default variant",
          "secondary": "Button variant='secondary'",
          "outline": "Button variant='outline'",
          "ghost": "Button variant='ghost'"
        }
      },

      "content": {
        "cards": {
          "component": "Card (shadcn)",
          "structure": ["CardHeader", "CardTitle", "CardDescription", "CardContent"],
          "styling": "bg-card text-card-foreground border border-border"
        },
        
        "dataDisplay": {
          "pattern": "Key-value pairs with flexbox justify-between",
          "styling": {
            "container": "py-2 border-b border-border",
            "label": "font-medium text-muted-foreground",
            "value": "text-foreground"
          }
        }
      }
    },

    "patterns": {
      "pageStructure": {
        "layout": [
          "Header (full width)",
          "Main container (flex)",
          "  - Sidebar (250px fixed width)",
          "  - Content area (flex-1)"
        ],
        "contentPadding": "p-4 to p-6",
        "pageBackground": "bg-background"
      },
      
      "cardLayout": {
        "container": "bg-card rounded-lg border border-border",
        "padding": "p-4 to p-8",
        "spacing": "space-y-4 to space-y-6"
      },
      
      "interactiveStates": {
        "hover": "hover:bg-muted (for neutral elements)",
        "active": "bg-primary text-primary-foreground",
        "focus": "focus:ring-2 focus:ring-ring focus:outline-none",
        "disabled": "opacity-50 cursor-not-allowed"
      }
    },

    "accessibility": {
      "principles": [
        "Semantic color tokens ensure proper contrast in all themes",
        "Screen reader labels with sr-only class",
        "Keyboard navigation support through shadcn components",
        "Focus rings on interactive elements",
        "Proper heading hierarchy"
      ]
    },

    "implementation": {
      "framework": "Next.js 14+ (App Router)",
      "styling": "Tailwind CSS with shadcn/ui",
      "theming": "next-themes package",
      "icons": "Lucide React",
      "components": "shadcn/ui component library",
      
      "requiredDependencies": [
        "next-themes",
        "tailwindcss",
        "@radix-ui/* (via shadcn)",
        "lucide-react",
        "class-variance-authority"
      ],
      
      "fileStructure": {
        "components/": "Reusable UI components",
        "components/ui/": "shadcn/ui components", 
        "components/dashboard/": "Page-specific components",
        "app/": "Next.js app router pages"
      }
    },

    "designPrinciples": {
      "consistency": "Use semantic color tokens throughout",
      "simplicity": "Clean, minimal interfaces with clear hierarchy",
      "responsiveness": "Mobile-first approach with progressive enhancement",
      "accessibility": "WCAG compliant with proper contrast and navigation",
      "performance": "Optimized components with minimal re-renders",
      "maintainability": "Modular components with clear prop interfaces"
    },

    "futurePlanning": {
      "componentExpansion": [
        "Data visualization components for charts",
        "Advanced form components",
        "Modal and dialog components",
        "Loading states and skeleton components"
      ],
      
      "themeEnhancements": [
        "Custom color palette beyond default shadcn",
        "Animation and transition presets",
        "Component variants for different contexts"
      ]
    }
  }
}
